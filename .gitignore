<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AI Calculator</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
        }
        #calculator {
            width: 300px;
            margin: 50px auto;
            padding: 20px;
            background-color: #fff;
            border: 1px solid #ccc;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }
        #display {
            width: 100%;
            height: 40px;
            margin-bottom: 20px;
            padding: 10px;
            font-size: 24px;
            text-align: right;
            border: none;
            border-radius: 10px;
            background-color: #f9f9f9;
        }
        .btn {
            width: 60px;
            height: 30px;
            margin: 5px;
            padding: 5px;
            font-size: 14px;
            border: none;
            border-radius: 10px;
            background-color: #4CAF50;
            color: #fff;
            cursor: pointer;
        }
        .btn:hover {
            background-color: #3e8e41;
        }
        .grid-container {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 10px;
        }
        .history-btn {
            width: 100%;
            height: 30px;
            margin-top: 10px;
            padding: 5px;
            font-size: 14px;
            border: none;
            border-radius: 10px;
            background-color: #4CAF50;
            color: #fff;
            cursor: pointer;
        }
        .modal-content {
            background-color: #f9f9f9;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div id="calculator">
                <input id="display" type="text" disabled>
                <div class="grid-container">
                    <button class="btn" onclick="updateDisplay('7')">7</button>
                    <button class="btn" onclick="updateDisplay('8')">8</button>
                    <button class="btn" onclick="updateDisplay('9')">9</button>
                    <button class="btn" onclick="updateDisplay('4')">4</button>
                    <button class="btn" onclick="updateDisplay('5')">5</button>
                    <button class="btn" onclick="updateDisplay('6')">6</button>
                    <button class="btn" onclick="updateDisplay('1')">1</button>
                    <button class="btn" onclick="updateDisplay('2')">2</button>
                    <button class="btn" onclick="updateDisplay('3')">3</button>
                </div>
                <div class="grid-container">
                    <button class="btn" onclick="updateDisplay('0')">0</button>
                    <button class="btn" onclick="updateDisplay('.')">.</button>
                    <button class="btn" onclick="calculate()">=</button>
                    <button class="btn" onclick="updateDisplay('/')">/</button>
                    <button class="btn" onclick="updateDisplay('*')">*</button>
                    <button class="btn" onclick="updateDisplay('-')">-</button>
                    <button class="btn" onclick="updateDisplay('+')">+</button>
                    <button class="btn" onclick="clearDisplay()">Clear</button>
                    <button class="btn" data-bs-toggle="modal" data-bs-target="#historyModal">History</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="historyModal" tabindex="-1" aria-labelledby="historyModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="historyModalLabel">Calculation History</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="history" style="background-color: #f9f9f9;"></div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let display = document.getElementById('display');
        let historyDiv = document.getElementById('history');
        let calculationHistory = [];

        function updateDisplay(value) {
            display.value += value;
        }

        function clearDisplay() {
            display.value = '';
        }

        function calculate() {
            if (display.value === '') {
                display.value = 'Please enter a value';
                setTimeout(function() {
                    display.value = '';
                }, 2000);
                return;
            }
            if (display.value.length === 1 && ['+', '-', '*', '/'].includes(display.value)) {
                display.value = 'Please enter a valid expression';
                setTimeout(function() {
                    display.value = '';
                }, 2000);
                return;
            }
            if (['+', '-', '*', '/'].includes(display.value[display.value.length - 1])) {
                display.value = 'Please enter a valid expression';
                setTimeout(function() {
                    display.value = '';
                }, 2000);
                return;
            }
            try {
                let result = eval(display.value);
                display.value = result;
                calculationHistory.push(`${display.value} = ${result}`);
                updateHistory();
            } catch (e) {
                display.value = 'Error';
            }
        }

        function updateHistory() {
            historyDiv.innerText = calculationHistory.join('\n');
        }
    </script>
</body>
</html>
